@model Order
@{
    ViewBag.Title = "Редактирование документа";
}
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Number" class="control-label">№ документа</label>
        <input type="number" asp-for="Number" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Date" class="control-label">Дата</label>
        <input type="date" asp-for="Date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SupplyContract" class="control-label">Договор поставки</label>
        <input type="text" asp-for="SupplyContract" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Provider" class="control-label">Поставщик</label>
        <input type="text" asp-for="Provider" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StorageLocation" class="control-label">Место хранения</label>
        <input type="text" asp-for="StorageLocation" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>