@model Product
@{
    ViewBag.Title = "Удаление продукта";
}

<div>
    <dl class="dl-horizontal">
        <dt>Номенклатурный номер</dt>
        <dd>
            @Html.DisplayFor(model => model.Number)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="DeleteProduct" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>
