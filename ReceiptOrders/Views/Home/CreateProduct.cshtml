@{
    ViewBag.Title = "Добавление продукта";
}

@model Product

<form asp-action="CreateProduct" asp-controller="Home">
    <div class="form-group">
        <label asp-for="Number" class="control-label">Номенклатурный номер</label>
        <input type="number" asp-for="Number" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Цена</label>
        <input type="number" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Cost" class="control-label">Стоимость</label>
        <input type="number" asp-for="Cost" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>
